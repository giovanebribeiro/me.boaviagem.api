{
    "env": {
        "node": true,
        "es6": true
    },
    "plugins":[
      "mocha"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:mocha/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "no-mixed-spaces-and-tabs": [
        2, 
        "smart-tabs"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
}
